<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- https://inet.omnetpp.org/docs/users-guide/ch-routing.html -->
<BGPConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="BGP.xsd">
	
	<!-- "may" contain -->
    <TimerParams>
        <connectRetryTime> 120 </connectRetryTime>
        <holdTime> 180 </holdTime>
        <keepAliveTime> 60 </keepAliveTime>
        <startDelay> 15 </startDelay>
    </TimerParams>

	<AS id='1'> <!-- 0.1<-->1.0 -->
		<Router interAddr='10.10.1.2'/>
	</AS>
	<AS id='2'> <!-- 0.1<-->1.0 -->
		<Router interAddr='10.10.1.1'/>
	</AS>
	<Session id='1'> <!-- 0.1<-->1.0 -->
		<Router exterAddr='10.10.1.2'/>
		<Router exterAddr='10.10.1.1'/>
	</Session>
	<AS id='3'> <!-- 0.2<-->2.0 -->
		<Router interAddr='10.10.2.1'/>
	</AS>
	<Session id='2'> <!-- 0.2<-->2.0 -->
		<Router exterAddr='10.10.2.3'/>
		<Router exterAddr='10.10.2.1'/>
	</Session>

</BGPConfig>

